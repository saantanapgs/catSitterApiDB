generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  phone     String
  birthday  DateTime
  password  String
  createdAt DateTime  @default(now())
  role      String    @default("client") // "admin" ou "client"

  // Relação: um usuário pode ter vários serviços
  services  Service[]
}

model Service {
  id          Int       @id @default(autoincrement())
  petName     String
  serviceType String
  date        DateTime
  notes       String?
  createdAt   DateTime  @default(now())

  userId      Int
  user        User      @relation(fields: [userId], references: [id])
  price       Float    @default(0)  
}
