generator client {
  provider = "prisma-client-js"
  // opcional: remova "output" se quiser o padr√£o (recomendado)
  // output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  phone     String
  birthday  DateTime
  password  String
  createdAt DateTime @default(now())
  role String @default("client") // "admin" ou "client"
}
